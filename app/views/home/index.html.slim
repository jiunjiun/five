h1 Five
.panel.widget-chat
  .panel-heading
    span.panel-title
      i.panel-title-icon.fa.fa-comments-o
      | Chat
  /! / .panel-heading
  .panel-body#messages
    = render @messages
  form.panel-footer.chat-controls
    = button_tag t('helpers.exit'), class: 'btn btn-danger exit'
    .chat-controls-input
      = text_field_tag 'content', nil, class: 'form-control', placeholder: t('helpers.say_something'), data: {behavior: "chat_speaker"}, autocomplete: 'off'
    = button_tag t('helpers.send'), class: 'btn btn-primary chat-controls-btn speak'
